<Window x:Class="AppStoKursovaya.ActionManager.ManInfoWork"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppStoKursovaya.ActionManager"
        mc:Ignorable="d"
        Title="ManInfoWork" Height="220" Width="400" MinHeight="220" MaxHeight="220" MinWidth="400" MaxWidth="400">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Vertical">
                <Label Content="Введите новое описание услуги" FontSize="14" Margin="5 0 5 10"/>
                <TextBox x:Name="newDes" Height="44" Margin="5 0 5 10" FontSize="12"/>
            </StackPanel>

            <StackPanel Orientation="Vertical">
                <Label Content="Введите новую стоимость"/>
                <TextBox x:Name="newCost" Height="30" Margin="5 0 5 10" FontSize="12"/>
            </StackPanel>
            <Button x:Name="butAddInfoWork" Content="Принять" Background="Green" Margin="5 0 5 0" Click="butAddInfoWork_Click"/>
        </StackPanel>
    </Grid>
</Window>
